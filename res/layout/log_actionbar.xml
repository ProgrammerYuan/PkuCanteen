<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="5dp" >

    <ImageButton
        android:id="@+id/but_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avatar"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />
    
    <Button
        android:id="@+id/but_uname"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/but_avatar"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:gravity="center"
        android:text=""      
        android:textColor="@android:color/white" />

    
    <ImageButton
        android:id="@+id/but_new_report"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/new_report"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />
    
    <ImageButton
        android:id="@+id/but_help"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/question"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:layout_toLeftOf="@id/but_new_report" />
    
    <TextView
        android:id="@+id/txt_reward"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=""
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/but_help"/>

</RelativeLayout>
