<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:padding="5dip" >

    <ImageView 
        android:id="@+id/picture_img"
        android:layout_height="90dip"
        android:layout_width="90dip"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/picture_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" 
        android:layout_below="@id/picture_img" />
    
    <ImageView
        android:id="@+id/picture_ulv"
        android:layout_width="75dip"
		android:layout_height="15dip"
		android:scaleType="fitCenter"
		android:layout_toRightOf="@id/picture_uname"
		android:layout_below="@id/picture_img" />
    
    <TextView
        android:id="@+id/picture_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/picture_uname" />
    
</RelativeLayout>
